    <RecipeDef ParentName="Mahri_CookBrigadeiroBase">
		<defName>Mahri_CookBrigadeiro</defName>
		<label>make brigadeiro</label>
		<description>Make a single brigadeiro.</description>
		<jobString>Making brigadeiro.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Milk</li>
					</thingDefs>
				</filter>
				<count>0.3</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Chocolate</li>
					</thingDefs>
				</filter>
				<count>0.3</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
